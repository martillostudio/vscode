{
  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.fontFamily": "Operator Mono Lig, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.letterSpacing": 0.5,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.cursorBlinking": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "editor.fontFamily": "Operator Mono Lig, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "300",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.renderLineHighlight": "none",
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.guides.indentation": false,
  "editor.matchBrackets": "never",
  "editor.glyphMargin": false,
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "prettier.eslintIntegration": true,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "indenticator.width": 0.1,
  "indenticator.color.dark": "rgba(255, 255, 255, 0.1)",

  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  // Git
  "git.openRepositoryInParentFolders": "always",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // APC
  "apc.activityBar": {
    "position": "top",
    "size": 33,
    "hideSettings": false
  },
  "apc.statusBar": {
    "position": "bottom",
    "height": 28,
    "fontSize": 12
  },
  "workbench.colorTheme": "Cobalt2"
}
