{
  // Window
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "indenticator.width": 0.1,
  "indenticator.color.dark": "rgba(255, 255, 255, 0.1)",

  // Workbench
  "workbench.colorTheme": "Cobalt2",
  "workbench.editor.showTabs": "multiple",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",

  // Explorer
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,

  // Editor
  "editor.fontFamily": "Operator Mono Lig, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "editor.fontWeight": "400",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.renderLineHighlight": "none",
  "editor.semanticHighlighting.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.guides.indentation": false,
  "editor.matchBrackets": "never",
  "editor.glyphMargin": false,
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Files
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,

  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },

  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },

  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter",
    "editor.formatOnSave": true
  },

  // Git
  "git.openRepositoryInParentFolders": "always",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.fontFamily": "Operator Mono Lig, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.letterSpacing": 0.5,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.cursorBlinking": true
}
